<div class="parentBody" ng-controller="ksVCGController">
    <div class="applicationTopStrip">
        <top-Main-Strip notification="false"></top-Main-Strip>
    </div>
    <div class="applicationMiddleStripMain">
        <div class="parentRoleDashboard">
            <div class="parentRoleMenu coachThemeColor">
                <div class="profileViewMode genericPointerClass" ng-click="GetPrfileView()">
                    <div class="profileImagePart"></div>
                    <div class="profileNamePart fontClass genericPointerClass">WELCOME {{loggedDetail.FirstName+" "+loggedDetail.LastName}}</div>
                </div>
                <div class="leftSideMenuMainDashBoard">
                    <div class="leftSideMenuParent">
                        <div class="leftSideMenu valueCreationColor" ng-repeat="option in leftSideMenus" ng-click="menuClick($index,option)">
                            <h5 class="leftSideMenuLable fontClass genericPointerClass">{{option.name}}</h5>
                            <h5 ng-if="option.name == 'Add Skills'" style="float: right;font-size: 25px;margin: 1%;" class="leftSideMenuLable fontClass genericPointerClass">+</h5>
                        </div>
                    </div>
                </div>
            </div>
            @*Value creation score - 0*@
            <div class="parentRoleDetailRight" style="padding:1%;padding-bottom: 0;" ng-if="selectedMenu == '0'">
                <vcs-Dir></vcs-Dir>
            </div>
            @*Value Feed - 1*@
            <div class="parentRoleDetailRight" style="padding:1%;padding-bottom: 0;" ng-if="selectedMenu == '1'">
                <div class="parentBody">

                    <div class="parentRoleDashboard fontClass">
                        <h5 class="fontClass ValueFeedsHeader" style="visibility:hidden;">VALUE FEEDS</h5>
                        <div style="padding-left:5%;">
                            <h5 style="font-weight:bold;"> IMPACT ZONES</h5>
                            <div class="ImpactZoneButton">
                                <div style="display: flex;">
                                    <div class="valueFeedButton" ng-click="selectOption($index,option)" ng-repeat="option in topButtonArray">
                                        {{option.name}}
                                    </div>
                                </div>

                            </div>
                            <div style="width:100%">
                                <div style="width: 40%;height: 100%;margin-top: 7%;float:left; margin-right:7%">
                                    <div style="height: 20%;border-bottom: 2px solid lightgray;">
                                        <h5 class="fontClass ValueFeedsHeade">PODCASTS</h5>
                                    </div>
                                    <div style="padding: 10%;height: 100%; overflow-x: hidden; overflow-y: scroll; padding-left:30%;padding-right:30%" @*ng-repeat=""*@>
                                        <video width="150" height="100" controls autoplay target="_blank">
                                            <source src="/html5/foo.ogg" type="video/ogg" />
                                            <source src="/html5/foo.mp4" type="video/mp4" />
                                        </video>
                                        <video width="150" height="100" controls autoplay>
                                            <source src="/html5/foo.ogg" type="video/ogg" />
                                            <source src="/html5/foo.mp4" type="video/mp4" />
                                        </video>
                                        <video width="150" height="100" controls autoplay>
                                            <source src="/html5/foo.ogg" type="video/ogg" />
                                            <source src="/html5/foo.mp4" type="video/mp4" />
                                        </video>
                                    </div>
                                </div>
                                <div style="width: 40%;height: 100%;margin-top: 7%; float:left;margin-right:7%">
                                    <div style="float: left; width: 100%;border-bottom: 2px solid lightgray;height: 9%;display: flex;">
                                        <h5 class="fontClass" style="font-size: 14px;padding-left: 0;">STORY</h5>

                                        <h5 style="width:98px ;  float: right; margin: auto auto;margin-right: 0;" class="storyDescription">
                                            Show yourStory
                                            <div style="width: 14px; float: right;margin: auto auto;margin-right: 0;" ng-click="addStory()">
                                                <span class="glyphicon glyphicon-plus" title="Add story"></span>
                                            </div>

                                        </h5>
                                    </div>
                                    <div style="padding: 10%;height: 100%; overflow-x: hidden; overflow-y: scroll;" ng-repeat="story in StoryDetailArray">
                                        <div class="storyTitle">
                                            {{story.StoryTitle}}
                                        </div>
                                        <div style="font-size: 10px;">
                                            {{story.StoryContent}}
                                        </div>

                                    </div>
                                </div>

                            </div>

                        </div>

                        <div ng-show='valueFeeds.addStory' class="addStoryPanel fontClass" style="height: 45%;">

                            <!-- Screen 6 -->
                            <div class="addStoryContainer">
                                <img ng-click="closeaddStoryPopup()" class="addStoryPopupCancleButton" title="Close" src="~/Images/cancel.png" />
                                <div class="StoryTitlePanel">
                                    <h5 class="StoryName">Story Name</h5>
                                    <input type="text" placeholder="subject Name" class="storyTitleText" ng-model="AddStory.SubjectName" ng-required>
                                </div>
                                <div class="storyDescrionPanel">
                                    <textarea rows="4" cols="50" style="width: 94%; overflow:scroll;" ng-model="AddStory.Description" placeholder="Write your experiance and difference you created in the selected impact zone" ng-required></textarea>
                                </div>
                                <div style="width: 50%;float: right;margin-top: 3%;">
                                    <button type="button" style="width: 70px;height: 30px; padding:1%;" class="signupButton fontClass btn btn-default" ng-click="shareStoryClick()">SHARE</button>
                                </div>

                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
   </div>
</div>
